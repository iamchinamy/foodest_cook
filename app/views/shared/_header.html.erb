<div class="fixed-top">
	<nav class="navbar navbar-expand-md header">
			<div class="collapse navbar-collapse justify-content-around">
				<%= link_to root_path do %>
			    	<img class = "logo", src="/images/logo.png", width="70px", height="70px">
			    <% end %>
			</div>

			<div class="collapse navbar-collapse justify-content-around">
				<%= form_with(url: search_producer_recipes_path, local: true, method: :get) do |f| %>
					<%= f.text_field :keyword, placeholder: "キーワード" %>
					<%= f.submit "レシピを探す" %>
				<% end %>
			</div>

			<div class="collapse navbar-collapse justify-content-around">
				<ul class="navbar-nav">
					<% if producer_signed_in? %>
						<li class="nav-item">
							<%= link_to my_page_producer_homes_path do %>
								<span><i class="far fa-smile"></i>マイページ</span>
							<% end %>　
						</li>
						<li class="nav-item">
							<%= link_to new_producer_recipe_path do %>
								<span><i class="fas fa-pen-nib"></i>レシピ投稿</span>
							<% end %>　
						</li>
						<li class="nav-item">
							<%= link_to destroy_producer_session_path, method: :delete do %>
								<span><i class="fas fa-sign-out-alt"></i></span>
							<% end %>　
						</li>
					<% else %>
						<li class="nav-item">
							<%= link_to new_producer_registration_path do %>
								<span><i class="fas fa-user-plus"></i>無料会員登録</span>
							<% end %>
						</li>
					<% end %>
				</ul>
			</div>
	</nav>
</div>