<div class="container">
	<h1>生産者登録情報変更</h1>
	<div class="row">
		<%= form_with model: @producer, url: producer_home_path, local: true do |f| %>
			<table>
				<tr>
					<th><%= f.label :email, "メールアドレス", class: "col-form-label" %></th>
					<td><%= f.text_field :title, autofocus: true %></td>
				</tr>
				<tr>
					<th><%= f.label :corporate_name, "団体名", class: "col-form-label" %></th>
					<td><%= f.text_field :corporate_name %></td>
				</tr>
				<tr>
					<th><%= f.label :representative, "代表者様名", class: "col-form-label" %></th>
					<td><%= f.text_field :representative %></td>
				</tr>
				<tr>
					<th><%= f.label :post_code, "郵便番号", class: "col-form-label" %></th>
					<td><%= f.text_field :post_code %></td>
				</tr>
				<tr>
					<th><%= f.label :address, "住所", class: "col-form-label" %></th>
					<td><%= f.text_field :address %></td>
				</tr>
				<tr>
					<th><%= f.label :phone_number, "電話番号", class: "col-form-label" %></th>
					<td><%= f.text_field :phone_number %></td>
				</tr>
			</table>
		<%= f.submit "編集内容を保存する", class: 'customers-btn' %>
		<% end %>
	</div>
</div>