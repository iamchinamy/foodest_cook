<div class="container">
  <div class="signs-container">
    <h2 class="title">生産者さま無料会員登録</h2>

    <div class="signs-form-container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="signs-form-grourp">
        <%= render "producers/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :corporate_name, "事業団体名", class: "signs-form-title" %>
            <%= f.text_field :corporate_name, autofocus: true, placeholder: 'ふーですと農園', class: "signs-form-content" %>
          </div>

          <div class="field">
            <%= f.label :representative, "代表者さま氏名", class: "signs-form-title"  %>
            <%= f.text_field :representative, placeholder: '山田太郎', class: "signs-form-content" %>
          </div>

          <div class="field">
            <%= f.label :post_code, "所在地郵便番号（ハイフンなし）", class: "signs-form-title" %>
            <%= f.text_field :post_code, placeholder: '0005555', class: "signs-form-content" %>
          </div>

          <div class="field">
            <%= f.label :address, "所在地住所", class: "signs-form-title" %>
            <%= f.text_field :address, placeholder: '東京都港区芝公園4-2-8', class: "signs-form-content" %>
          </div>

          <div class="field">
            <%= f.label :phone_number, "電話番号（ハイフンなし）", class: "signs-form-title" %>
            <%= f.text_field :phone_number, placeholder: '09022225555', class: "signs-form-content" %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス（必須）", class: "signs-form-title" %>
            <%= f.email_field :email, autocomplete: "email", class: "signs-form-content" %>
          </div>

          <div class="field">
            <div class="signs-form-title">
              <%= f.label :password, "パスワード（必須）" %>
              <% if @minimum_password_length %>
              <span>(<%= @minimum_password_length %> 文字以上)</span>
              <% end %>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: 'a@a', class: "signs-form-content" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワード再確認", class: "signs-form-title" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signs-form-content" %>
          </div>

          <div class="actions signs-btn-group">
            <%= f.submit "登録する", class: "btn btn-outline-info signs-btn" %>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>