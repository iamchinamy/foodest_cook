<div class="container">
  <div class="signs-container">
    <h2 class="title">ログイン</h2>

    <div class="signs-form-container">
      <div class="signs-form-grourp">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, "メールアドレス", class: "signs-form-title" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signs-form-content" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード", class: "signs-form-title" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "signs-form-content" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions signs-btn-group">
            <%= f.submit "Log in", class: "btn btn-outline-info signs-btn" %>
          </div>
        <% end %>
        <%= render "producers/shared/links" %>

      </div>
    </div>
  </div>
</div>